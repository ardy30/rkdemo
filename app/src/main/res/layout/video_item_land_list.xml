<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/video_item" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="horizontal">
	<FrameLayout android:id="@+id/video_play"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<ImageView android:id="@+id/video_image" android:scaleType="fitXY"
			android:src="@drawable/icon_video" android:layout_height="@dimen/surfaceheight"
			android:layout_width="@dimen/surfacewidth" />
		<android.rk.RockVideoPlayer.ui.DeleteImage
			android:id="@+id/video_deletepoint" android:visibility="gone"
			android:layout_gravity="right|top" android:src="@drawable/delete_point"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
	</FrameLayout>
	<LinearLayout android:id="@+id/video_info"
		android:paddingLeft="10dip" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_height="60dip"
			android:layout_width="fill_parent" android:orientation="horizontal">
			<TextView android:id="@+id/video_name" android:gravity="center_vertical"
				android:layout_width="0dip" android:layout_weight="1"
				android:layout_height="fill_parent" android:textColor="@color/white"
				android:textStyle="bold" android:singleLine="true" 
				android:textSize="@dimen/default_text_size_middle" />
			<ImageView android:id="@+id/video_playpoint"
				android:layout_gravity="right|bottom" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:visibility="gone"/>
		</LinearLayout>

		<LinearLayout android:id="@+id/video_info"
			android:layout_width="fill_parent" android:layout_height="50dip"
			android:orientation="horizontal">
			<TextView android:id="@+id/time_info" android:layout_width="0dip"
				android:layout_weight="15" android:layout_height="fill_parent"
				android:singleLine="true" android:textSize="@dimen/default_text_size_middle" />
			<TextView android:layout_height="fill_parent"
				android:layout_width="0dip" android:layout_weight="2" />
			<TextView android:id="@+id/type_info" android:layout_height="fill_parent"
				android:layout_width="0dip" android:layout_weight="12"
				android:singleLine="true" android:textSize="@dimen/default_text_size_middle" />
			<TextView android:layout_height="fill_parent"
				android:layout_width="0dip" android:layout_weight="2" />
			<TextView android:id="@+id/size_info" android:layout_width="0dip"
				android:layout_weight="8" android:layout_height="fill_parent"
				android:singleLine="true" android:textSize="@dimen/default_text_size_middle" />
			<TextView android:layout_height="fill_parent"
				android:layout_width="0dip" android:layout_weight="2" />
			<TextView android:id="@+id/path_info" android:layout_width="0dip"
				android:layout_weight="23" android:layout_height="fill_parent"
				android:singleLine="true" android:textSize="@dimen/default_text_size_middle" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>