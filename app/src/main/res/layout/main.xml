<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/videobutton_background"
    android:layout_gravity="center"
    android:id="@+id/main_layout"
    >    
    
    <LinearLayout
		android:layout_height="0px"
		android:layout_width="fill_parent"
		android:layout_weight="2"
		android:orientation="horizontal"
		android:id="@+id/topstaticlayout1">
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="1">
		</LinearLayout>
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="5"
			android:orientation="horizontal"
			android:gravity="center|left"
			>
			<ImageView
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:padding="5dip"
				android:id="@+id/topstaticImageView"
				android:src="@drawable/icon"
				android:clickable="false"
				android:scaleType="centerInside"
				android:focusable="false">
			</ImageView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/topstaticTitle"
				android:textColor="#ffffff"
				android:textSize="@dimen/default_text_size_middle"
				android:text="@string/topstatic_videolist"
				android:gravity="center_horizontal">
			</TextView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="14">
		</LinearLayout>
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="4"
			android:gravity="bottom|right"
			android:id="@+id/topstaticlayout">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/search_bar"
				android:clickable="true"
				android:scaleType="centerInside"
				android:focusable="true"
				android:src="@drawable/search">
			</ImageView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="0.6">
		</LinearLayout>
</LinearLayout>

<LinearLayout
	    android:id="@+id/image_line_top"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top|center_horizontal"
	    android:background="@drawable/line_top"
	    android:gravity="center_vertical|left"
	    android:orientation="horizontal"
	    android:layout_marginLeft="20dip"
	    android:layout_marginRight="20dip">
</LinearLayout>
	
	
<LinearLayout
		android:layout_height="0px"
		android:layout_width="fill_parent"
		android:layout_weight="15"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:layout_weight="1">
			<ImageView
		        android:id="@+id/page_left"
		        android:src="@drawable/dark_left"
		        android:scaleType="fitXY"
		        android:layout_gravity="center"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:layout_weight="18">
			<android.support.v4.view.ViewPager
		        android:id="@+id/viewpager"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_margin="15dip"
		        android:layout_gravity="center" />
        </LinearLayout>
        
	<LinearLayout
		android:layout_width="0px"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:layout_weight="1">
		<ImageView
	        android:id="@+id/page_right"
	        android:src="@drawable/dark_right"
	        android:layout_gravity="center"
	        android:scaleType="fitXY"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>

<LinearLayout
		android:layout_height="0px"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal">

		<LinearLayout android:id="@+id/local"
			android:layout_height="wrap_content"
	  		android:layout_width="fill_parent"
	  		android:layout_gravity="center"
			android:gravity="center">

		  	<android.rk.RockVideoPlayer.UIView.PageIndexView 
				android:id="@+id/pageControl"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="#00000000"
				android:layout_gravity="center"
				android:gravity="center"/>
	  	</LinearLayout>

</LinearLayout>	

</LinearLayout>
