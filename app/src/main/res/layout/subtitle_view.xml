<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtitle_selector"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/listbak"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/subtitle_textsize"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/subtitle_text_size"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="@string/subtitle_textsize"
            android:textColor="#000000"
            android:textSize="@dimen/default_text_size_middle" />

        <ImageView
            android:id="@+id/subtitle_arrow_left"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/subtitle_btn"
            android:focusable="true"
            android:gravity="center"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/default_text_size_middle" />

        <ImageView
            android:id="@+id/subtitle_arrow_right"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/subtitle_btn"
            android:focusable="true"
            android:gravity="center_vertical"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/devider0"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:focusable="false"
        android:src="@drawable/divider_horizontal" />

    <LinearLayout
        android:id="@+id/subtitle_textcolor"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/subtitle_text_color"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="@string/subtitle_textcolor"
            android:textColor="#000000"
            android:textSize="@dimen/default_text_size_middle" />

        <ImageView
            android:id="@+id/subtitle_arrow_left1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/subtitle_btn"
            android:focusable="true"
            android:gravity="center"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/subtitle_color"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/default_text_size_middle" />

        <ImageView
            android:id="@+id/subtitle_arrow_right1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/subtitle_btn"
            android:focusable="true"
            android:gravity="center_vertical"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

</LinearLayout>