<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
        <shape android:shape="oval" >
            <corners android:radius="@dimen/seekbar_thumb_radius"/>
            <solid android:color="@color/white" />
            <size android:width ="@dimen/seekbar_thumb_width_outer"
			      android:height="@dimen/seekbar_thumb_width_outer"/>
        </shape>
    </item>
    
	<item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp" >
	    <selector xmlns:android="http://schemas.android.com/apk/res/android">
	        <item android:state_pressed="true">
				<shape android:shape="oval" >
		            <corners android:radius="@dimen/seekbar_thumb_radius"/>
		            <solid android:color="#e66b4f" />
		            <size android:width  ="@dimen/seekbar_thumb_width_inner"
					      android:height ="@dimen/seekbar_thumb_width_inner"/>
        		</shape>
			</item>
	        
	        <item>
		        <shape android:shape="oval" >
		            <corners android:radius="@dimen/seekbar_thumb_radius"/>
		            <solid android:color="#f3876f" />
		            <size android:width  ="@dimen/seekbar_thumb_width_inner"
					      android:height ="@dimen/seekbar_thumb_width_inner"/>
		        </shape>
	        </item>
        
		</selector>
	</item>
	
</layer-list>
